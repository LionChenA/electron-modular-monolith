{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/app/renderer/env.d.ts",
    "src/app/renderer/**/*",
    "src/app/renderer/**/*.tsx",
    "src/app/preload/*.d.ts",
    "src/features/*/renderer/**/*",
    "src/features/*/shared/**/*",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@app/renderer/*": ["src/app/renderer/*"],
      "@app/main/*": ["src/app/main/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"]
    },
    "outDir": "dist/types/web",
    "rootDir": "."
  }
}
